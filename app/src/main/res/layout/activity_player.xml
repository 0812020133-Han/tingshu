<?xml version="1.0" encoding="utf-8"?>
<com.github.eprendre.tingshu.widget.SimpleStateLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/state_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inAnimation="@android:anim/fade_in"
        android:outAnimation="@android:anim/fade_out"
        >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".PlayerActivity"
            android:orientation="vertical"
            android:padding="16dp"
            >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                >

            <TextView
                    android:id="@+id/infos"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text"
                    android:textStyle="bold"
                    tools:text="123456789"
                    />

            <Button
                    android:id="@+id/timer_button"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:padding="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:textSize="12sp"
                    android:text="定时关闭"

                    />
        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="速度："
                    android:textColor="@color/primary_text"
                    />

            <RadioGroup
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/radiogroup"
                    >

                <RadioButton
                        android:id="@+id/button_speed_0_75"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.75"
                        />

                <RadioButton
                        android:checked="true"
                        android:id="@+id/button_speed_1"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.0"
                        />

                <RadioButton
                        android:layout_weight="1"
                        android:id="@+id/button_speed_1_25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.25"
                        />

                <RadioButton
                        android:id="@+id/button_speed_1_5"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.5"
                        />

                <RadioButton
                        android:id="@+id/button_speed_2"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2.0"
                        />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

            <TextView
                    android:id="@+id/text_current"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/secondary_text"
                    tools:text="00:12"
                    />

            <SeekBar
                    android:layout_weight="1"
                    android:id="@+id/seekbar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    />

            <TextView
                    android:id="@+id/text_duration"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/secondary_text"
                    tools:text="21:35"
                    />
        </LinearLayout>


        <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                >

            <ImageButton
                    android:id="@+id/button_previous"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?selectableItemBackgroundBorderless"
                    android:src="@drawable/exo_icon_previous"
                    android:tint="@color/colorAccent"
                    />

            <ImageButton
                    android:id="@+id/button_rewind"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?selectableItemBackgroundBorderless"
                    android:src="@drawable/exo_icon_rewind"
                    android:tint="@color/colorAccent"
                    />

            <ImageButton
                    android:id="@+id/button_play"
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?selectableItemBackgroundBorderless"
                    android:src="@drawable/exo_icon_play"
                    android:tint="@color/colorAccent"
                    />

            <ImageButton
                    android:id="@+id/button_fastforward"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?selectableItemBackgroundBorderless"
                    android:src="@drawable/exo_icon_fastforward"
                    android:tint="@color/colorAccent"
                    />

            <ImageButton
                    android:id="@+id/button_next"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?selectableItemBackgroundBorderless"
                    android:src="@drawable/exo_icon_next"
                    android:tint="@color/colorAccent"
                    />

        </LinearLayout>

        <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:text="章节列表:"
                android:textStyle="bold"
                />

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                />

    </LinearLayout>
</com.github.eprendre.tingshu.widget.SimpleStateLayout>
